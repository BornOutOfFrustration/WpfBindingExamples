<Window x:Class="WpfBindingExamples.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBindingExamples"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" >
    <Grid>
        <!--Always use path for binding to an Attached Property (property from parent. Attached property between "( )" -->
        <Ellipse
            Width="200"
            Height="{Binding Path=(Window.Height)}" 
            Fill="Blue"
            Stroke="Black"
            StrokeThickness="4" />
    </Grid>
</Window>
